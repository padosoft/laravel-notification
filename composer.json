{
    "name": "padosoft/laravel-notification",
    "description": "Notification system for laravel",
    "license": "MIT",
    "keywords": [
        "padosoft",
        "laravel-settings",
        "laravel",
        "settings",
        "cache"
    ],
    "authors": [
        {
            "name": "Leonardo Padovani",
            "email": "helpdesk@padosoft.com",
            "homepage": "https://www.padosoft.com",
            "role": "Developer"
        }
    ],
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/padosoft/laravel-activitylog-extended"
        },
        {
            "type": "git",
            "url": "https://github.com/padosoft/laravel-permission-extended"
        }
    ],
    "require": {
        "php": ">=7.1.3",
        "laravel/framework": "^5.8|^6.0|^7.0|^8.0|^9.0",
        "nexmo/client": "^1.3|^2.4",
        "padosoft/laravel-permission-extended": "^1.0|^2.2",
        "padosoft/laravel-activitylog-extended": "^2.0"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "mockery/mockery": "^1.0",
        "orchestra/testbench": "^3.8|^4.0|^5.0|^6.0|^7.0",
        "phpunit/phpunit": "^8.0|^9.0"
    },
    "autoload": {
        "psr-4": {
            "Padosoft\\Laravel\\Notification\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "aliases": {
                "NotificationManager": "Padosoft\\Laravel\\Notification\\NotificationFacade"
            },
            "providers": [
                "Padosoft\\Laravel\\Notification\\NotificationServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
